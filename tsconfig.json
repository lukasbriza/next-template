{
  "compilerOptions": {
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2017",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    ".next",
    "node_modules",
    "public"
  ],
  "include": [
    ".eslintrc.cjs",
    ".next/types/**/*.ts",
    "global.d.ts",
    "next-env.d.ts",
    "next.config.js",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx"
  ]
}
